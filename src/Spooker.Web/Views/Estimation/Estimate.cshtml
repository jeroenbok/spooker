@using Spooker.Web.Domain
@using System.Linq
@model Spooker.Web.Controllers.EstimationForm

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
    <head>
        <title>Spooker - Estimate</title>
    </head>
    <body>
        <div>
                Name: @ViewBag.UserName - Participants: @ViewBag.TotalParticipants
            @using (Html.BeginForm())
            {
                <div>
                    @Html.LabelFor(m => m.Estimate)
                    @Html.ValidationMessageFor(m => m.Estimate)
                </div>
                <div>
                    @Html.DropDownListFor(m => m.Estimate, new SelectList(Enum.GetValues(typeof(StoryPoints))))
                </div>
                <input type="submit" value="Estimate"/>
            }
            
        </div>
    </body>
</html>